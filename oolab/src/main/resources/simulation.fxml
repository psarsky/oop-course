<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            minHeight="550.0" minWidth="850.0"
            fx:controller="agh.ics.oop.presenter.SimulationPresenter">
    <center>
        <GridPane fx:id = "mapGrid" gridLinesVisible="true" alignment="CENTER"/>
    </center>
    <bottom>
        <HBox spacing="10" alignment="CENTER">
            <TextField fx:id="moveList" promptText="Enter moves"/>
            <Label fx:id="moveDescription" textAlignment="CENTER"/>
            <Button text="Start" onAction="#startSimulation"/>
        </HBox>
    </bottom>
</BorderPane>
